# Default config file
config_file="bot_settings.sh"
# Default place to load libraries from
library_dir="lib"

# This file runs envbot in a sane setup, this is the simplest way to do it:

# env -i:      Clean environment
# bash --norc: Don't read profile/bashrc
exec env -i bash --norc "${library_dir}/main.sh" -c "$config_file" --libdir "$library_dir" "$@"
